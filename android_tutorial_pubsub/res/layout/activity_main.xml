<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <TextView
        android:id="@+id/textView_id"
        android:layout_width="360dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="34dp"
        android:text="@string/robotbucks"
        android:textSize="34sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:text="ROBOTBUCKS"
        android:textColor="?android:attr/colorControlActivated"
        tools:targetApi="lollipop"
        android:layout_below="@+id/text_greeting"
        android:layout_alignStart="@+id/text_greeting" />

    <ImageView
        android:id="@+id/robot_welcome"
        android:layout_width="220dp"
        android:layout_height="250dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="396dp"
        android:layout_marginStart="392dp"
        android:contentDescription="@android:string/ok"
        android:scaleType="fitCenter"
        android:src="@drawable/r2"
        android:visibility="visible"
        tools:targetApi="lollipop" />

    <TextView
        android:id="@+id/text_greeting"
        android:layout_width="360dp"
        android:layout_height="42dp"
        android:layout_marginTop="28dp"
        android:text="@string/Greeting"
        android:textColor="?android:attr/colorControlActivated"
        android:textSize="36sp"
        android:textStyle="italic"
        tools:text="WELCOME"
        tools:targetApi="lollipop"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/robot_welcome"
        android:layout_alignStart="@+id/robot_welcome" />


</RelativeLayout>
